<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_good"
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:srcCompat="@tools:sample/avatars[10]" />

    <LinearLayout
        android:id="@+id/layout_text_good"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="4dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/text_title_good"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Петрушка листовая 267"
            android:textColor="@color/color_text_main"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_desc_good"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/roboto"
            android:text="1 420,00 руб"
            android:textColor="@color/color_text_secondary" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_cost_good"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:text="420,00 руб"
        android:textSize="16sp" />
</LinearLayout>